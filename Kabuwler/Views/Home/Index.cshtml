@model List<Product>

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Kabuwler</h1>
        <br />
        <p>
            <input id="CrawlerText" type="text">
            <button class="btn btn-danger" onclick="checkValue()">Crawl</button>
        </p>
        <p class="lead text-muted">Crawling fast your product in the KABUM site</p>
    </div>
</section>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach(var add in Model)
            {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="First Slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Second Slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Third Slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Preview</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@add.Title</p>
                        <p class="card-text">Descrição</p>
                        <p>@add.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">@add.Price</button>
                                <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseComments" aria-expanded="false" aria-controls="collapseComments">Comments</button>
                            </div>
                            <div class="collapse" id="collapseComments">
                                <div class="card card-body">
                                    @add.Comments
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Scripts" />
}